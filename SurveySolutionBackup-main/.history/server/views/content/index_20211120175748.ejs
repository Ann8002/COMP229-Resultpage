<%- include('../partials/header.ejs'); %>

    <!-- MAIN CONTENT -->

     
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            
        
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Start Date</th>
                  <th>End Date</th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                
                <% for (let count = 0; count < survey.length; count++) { %>
                <tr>
                  <td><%= survey[count].title %></td>
                  <td><%= survey[count].startDate %></td>
                  <td><%= survey[count].endDate %></td>
                  
                  <td class="text-center">
                    <a href="/survey/login/<%=survey[count]._id %>" class="btn btn-primary">
                    <i class="fas fa-view-alt"></i>Answer Survey</a>
                  </td>
                    
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          
          </div>
          
        
      </div>
    </div>

<%- include('../partials/footer.ejs'); %>


