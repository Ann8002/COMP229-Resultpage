<%- include('../partials/header.ejs'); %>
    <!-- Content for the View page -->
    <div class="container">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <h1>
                    <%= title %>
                </h1>

                <form class="form" method="POST">
                    <% if(!answers) { %>
                        <div class="form-group">
                            <label for="nameTextField">Survey Title</label>
                            <input type="text" class="form-control" id="nameTextField" name="title"
                                value="<%= survey.title %>">
                        </div>

                        <div class="form-group">
                            <label>Question 1</label>
                            <input type="text" class="form-control" id="question1" name="question1" readonly="readonly"
                                value="<%= survey.question1 %>">
                            <input type="checkbox" id="answerT1" name="answerT1" value="true" />
                            <label for="true"> True</label>
                            <input type="checkbox" id="answerF1" name="answerF1" value="false" />
                            <label for="false"> False</label>
                        </div>
                        <div class="form-group">
                            <label>Question 2</label>
                            <input type="text" class="form-control" id="question2" name="question2" readonly="readonly"
                                value="<%= survey.question2 %>">
                            <input type="checkbox" id="answerT2" name="answerT2" value="true" />
                            <label for="true"> True</label>
                            <input type="checkbox" id="answerF2" name="answerF2" value="false" />
                            <label for="false"> False</label>
                        </div>
                        <div class="form-group">
                            <label>Question 3</label>
                            <input type="text" class="form-control" id="question3" name="question3" readonly="readonly"
                                value="<%= survey.question3 %>">
                            <input type="checkbox" id="answerT3" name="answerT3" value="true" />
                            <label for="true"> True</label>
                            <input type="checkbox" id="answerF3" name="answerF3" value="false" />
                            <label for="false"> False</label>
                        </div>
                        <div class="form-group">
                            <label>Question 4</label>
                            <input type="text" class="form-control" id="question4" name="question4" readonly="readonly"
                                value="<%= survey.question4 %>">
                            <input type="checkbox" id="answerT4" name="answerT4" value="true" />
                            <label for="true"> True</label>
                            <input type="checkbox" id="answerF4" name="answerF4" value="false" />
                            <label for="false"> False</label>
                        </div>
                        <% } else { %>
                            <div class="form-group">
                                <label for="nameTextField">Survey Title</label>
                                <input type="text" class="form-control" id="nameTextField" name="title"
                                    value="<%= survey.title %>">
                            </div>

                            <div class="form-group">
                                <label>Question Tom</label>
                                <input type="text" class="form-control" id="question1" name="question1"
                                    readonly="readonly" value="<%= survey.question1 %>">
                                <input type="checkbox" id="answerT1" name="answerT1" value="true"
                                    <%=answers.answer1=="TRUE" ? "checked" : "" %> />
                                <label for="true"> True</label>
                                <input type="checkbox" id="answerF1" name="answerF1" value="false"
                                    <%=answers.answer1=="FALSE" ? "checked" : "" %> />
                                <label for="false"> False</label>
                            </div>
                            <div class="form-group">
                                <label>Question 2</label>
                                <input type="text" class="form-control" id="question2" name="question2"
                                    readonly="readonly" value="<%= survey.question2 %>">
                                <input type="checkbox" id="answerT2" name="answerT2" value="true"
                                    <%=answers.answer2=="TRUE" ? "checked" : "" %> />
                                <label for="true"> True</label>
                                <input type="checkbox" id="answerF2" name="answerF2" value="false"
                                    <%=answers.answer2=="FALSE" ? "checked" : "" %> />
                                <label for="false"> False</label>
                            </div>
                            <div class="form-group">
                                <label>Question 3</label>
                                <input type="text" class="form-control" id="question3" name="question3"
                                    readonly="readonly" value="<%= survey.question3 %>">
                                <input type="checkbox" id="answerT3" name="answerT3" value="true"
                                    <%=answers.answer3=="TRUE" ? "checked" : "" %> />
                                <label for="true"> True</label>
                                <input type="checkbox" id="answerF3" name="answerF3" value="false"
                                    <%=answers.answer3=="FALSE" ? "checked" : "" %> />
                                <label for="false"> False</label>
                            </div>
                            <div class="form-group">
                                <label>Question 4</label>
                                <input type="text" class="form-control" id="question4" name="question4"
                                    readonly="readonly" value="<%= survey.question4 %>">
                                <input type="checkbox" id="answerT4" name="answerT4" value="true"
                                    <%=answers.answer4=="TRUE" ? "checked" : "" %> />
                                <label for="true"> True</label>
                                <input type="checkbox" id="answerF4" name="answerF4" value="false"
                                    <%=answers.answer4=="FALSE" ? "checked" : "" %> />
                                <label for="false"> False</label>
                            </div>
                            <% } %>
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa fa-edit"></i> Submit</button>

                                <a href="/" class="btn btn-warning">
                                    <i class="fa fa-undo"></i> Cancel</a>

                </form>
            </div>

        </div>
    </div>